        background-color: #000;
    #setting_pannels
        display:block;
        top: 41px;

#pannels_inner
    background: red;
    padding-left: 10px;
    padding: 8px 10px;
    background-color: #999;
    position: relative;

.setting-wrapper
    //margin-bottom: 0;
    //border: none;
    //border-bottom: 1px solid black;
    border-color: #000;
    border-radius: 0px;
    background: #eee;

.color-picker-wrapper
    height: auto;

.expand-color-pick-wrapper
    height: 180px;

.compass
    width: 90px;
    height:75px;
    position: fixed;
    right: 0px;
    bottom: 0px;
    background: #000;
    background-color: rgba(0,0,0,0.3);
    transition: right 0.3s, bottom 0.3s;
    .toggle-compass
        position: absolute;
        top: 0px;
        left: 0px;
        border: 6px solid #000;
        border-right-color: transparent;
        border-bottom-color: transparent;
        width: 0px;
        height: 0px;
        cursor: pointer;
    .compass-btn
        position: absolute;
        cursor: pointer;
    .compass-btn-0
        sprite($reset)
    .compass-btn-1
        sprite($up)
    .compass-btn-2
        sprite($right)
    .compass-btn-3
        sprite($down)
    .compass-btn-4
        sprite($left)
    .compass-btn-zoom
        position: absolute;
        z-index: 1;
        cursor: pointer;
    .compass-btn-zoomin
        sprite($zoomin)
    .compass-btn-zoomout
        sprite($zoomout)

.compass-hide
    background-color: rgba(0,0,0,0);
    right: -78px;
    bottom: -63px;
    .toggle-compass
        border-color: #000;
        border-left-color: transparent;
        border-top-color: transparent;